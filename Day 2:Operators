#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    double meal_cost,total_cost;
    int tip_percent,tax_percent;

    scanf("%lf %d %d",&meal_cost,&tip_percent,&tax_percent);

    total_cost=meal_cost+((meal_cost/100)*tip_percent)+((meal_cost/100)*tax_percent);

    printf("%d",(int)round(total_cost));

    return 0;
}

